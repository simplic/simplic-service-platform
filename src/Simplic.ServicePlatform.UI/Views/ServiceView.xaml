<Window x:Class="Simplic.ServicePlatform.UI.ServiceView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:Simplic.ServicePlatform.UI"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        xmlns:simplic="http://schemas.simplic-systems.com/2016/xaml/presentation"
        xmlns:i = "http://schemas.microsoft.com/xaml/behaviors" 
        mc:Ignorable="d" 
        d:DesignHeight="400" d:DesignWidth="800"
        MinHeight="400" MinWidth="400"
        Height="800" Width="1300"
        Title="{Binding ServiceName}">

    <Window.Resources>
        <Style x:Key="RadListBoxItemStyle" TargetType="telerik:RadListBoxItem" >
            <Setter Property="telerik:DragDropManager.AllowCapturedDrag" Value="True" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <!-- Soon: Ribbon bar -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <telerik:RadButton Width="70"
                           HorizontalAlignment="Left"
                           Content="Save"
                           Command="{Binding SaveCommand}"
                           Margin="10,0,0,0"/>

        <telerik:RadButton Content="+"
                           HorizontalAlignment="Right"
                           Command="{Binding AddCardCommand}"
                           Margin="0,0,0,10"/>

        <Border Grid.Row="1" Padding="10">
            <!--#region CardView for all Services-->
            <telerik:RadCardView x:Name="ServicesCardView"
                                 CardHeaderBinding="{Binding Model.ServiceName}"
                                 ItemsSource="{Binding Services}"
                                 SelectedItem="{Binding SelectedServiceCard, Mode=TwoWay}"
                                 AutoGenerateDataFieldDescriptors="False" AllowDrop="True">
                    <telerik:RadCardView.ContextMenu>
                        <ContextMenu>
                            <MenuItem  Header="Add Card" Command="{Binding AddCard}"/>
                            <MenuItem  Header="Delete Card" Command="{Binding DeleteCardCommand}"/>
                            <MenuItem  Header="Edit Card"/>
                        </ContextMenu>
                    </telerik:RadCardView.ContextMenu>
                <telerik:RadCardView.CardReadOnlyTemplate>
                    <DataTemplate>
                        <Border Padding="5" Width="295">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <telerik:Label Grid.Column="0" Grid.Row="0" Content="ID"/>
                                <telerik:Label Grid.Column="1" Grid.Row="0" Content="{Binding Model.Id}"
                                               FontSize="13"
                                               HorizontalAlignment="Right"
                                               Grid.ColumnSpan="2"/>
                                <telerik:Label Grid.Column="0" Grid.Row="1" Content="{simplic:Localization Key=xaml_service_name}"/>
                                <telerik:RadWatermarkTextBox Grid.Row="1" Grid.Column="1"
                                                             WatermarkContent="Service Example"
                                                             Text="{Binding Model.ServiceName}"
                                                             HorizontalAlignment="Right"/>

                                <!--#region Used modules of the service definition-->
                                <telerik:RadListBox x:Name="ServiceModulesListBox" Grid.Row="2"
                                                    Grid.ColumnSpan="2"
                                                    ItemsSource="{Binding UsedModules, Mode=TwoWay}"
                                                    ItemContainerStyle="{StaticResource RadListBoxItemStyle}"
                                                    SelectedItem="{Binding SelectedServiceModule}"
                                                    MinHeight="50" AllowDrop="True"
                                                    HorizontalContentAlignment="Center"
                                                    VerticalAlignment="Stretch">
                                    <!--#region Behaviors-->
                                    <telerik:EventToCommandBehavior.EventBindings>
                                        <telerik:EventBinding Command="{Binding DropCommand}" EventName="Drop"
                                                              CommandParameter="{Binding SelectedAvailableModule}"/>
                                    </telerik:EventToCommandBehavior.EventBindings>
                                    <telerik:RadListBox.DragDropBehavior>
                                        <telerik:ListBoxDragDropBehavior AllowReorder="True"
                                                                 telerik:TouchManager.DragStartTrigger="TapHoldAndMove"
                                                                 telerik:DragDropManager.AllowDrag="True"/>
                                    </telerik:RadListBox.DragDropBehavior>
                                    <!--#endregion-->
                                    <!--#region Expanders for Configuration-->
                                    <telerik:RadListBox.ItemTemplate>
                                        <DataTemplate>
                                            <telerik:RadExpander Grid.Column="1" Header="{Binding Model.Name}">
                                                <telerik:RadExpander.Content>
                                                    <telerik:RadListBox ItemsSource="{Binding ConfigurationDefinitions}">
                                                        <telerik:RadListBox.ItemTemplate>
                                                            <DataTemplate>
                                                                <Grid MaxWidth="280">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                    </Grid.ColumnDefinitions>
                                                                    <TextBlock Grid.Column="0" Text="{Binding Name}"/>
                                                                    <TextBox Grid.Column="1" Text="{Binding Value}" Margin="4,0,0,0"/>
                                                                </Grid>
                                                            </DataTemplate>
                                                        </telerik:RadListBox.ItemTemplate>
                                                    </telerik:RadListBox>
                                                </telerik:RadExpander.Content>
                                            </telerik:RadExpander>
                                        </DataTemplate>
                                    </telerik:RadListBox.ItemTemplate>
                                    <!--#endregion-->
                                </telerik:RadListBox>
                                <!--#endregion-->

                            </Grid>
                        </Border>
                    </DataTemplate>
                </telerik:RadCardView.CardReadOnlyTemplate>
            </telerik:RadCardView>

            <!--#endregion-->
        </Border>

        <!--#region Available Modules-->
        <Border Grid.Row="1" Grid.Column="1" Padding="0,10,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <telerik:Label Content="{simplic:Localization Key=xaml_available_modules}"/>
                <telerik:RadListBox Grid.Row="1"
                                x:Name="AvailableModulesRadListBox"
                                ItemsSource="{Binding AvailableModules}"
                                DisplayMemberPath="Name"
                                SelectedItem="{Binding SelectedAvailableModule, Mode=TwoWay}"
                                AllowDrop="True"
                                telerik:TouchManager.IsTouchHitTestVisible="True">
                    <telerik:RadListBox.ItemContainerStyle>
                        <Style TargetType="telerik:RadListBoxItem">
                            <Setter Property="telerik:DragDropManager.AllowDrag" Value="True" />
                            <Setter Property="telerik:DragDropManager.AllowCapturedDrag" Value="True" />
                            <Setter Property="telerik:TouchManager.DragStartTrigger" Value="TapHoldAndMove"/>
                        </Style>
                    </telerik:RadListBox.ItemContainerStyle>

                    <!--TODO custom behavior that doesn't remove elements upon drop-->
                    <telerik:RadListBox.DragDropBehavior>
                        <telerik:ListBoxDragDropBehavior AllowReorder="True" telerik:DragDropManager.AllowDrag="True"/>
                    </telerik:RadListBox.DragDropBehavior>

                    <telerik:RadListBox.DragVisualProvider>
                        <telerik:ScreenshotDragVisualProvider />
                    </telerik:RadListBox.DragVisualProvider>
                </telerik:RadListBox>
            </Grid>
        </Border>

        <!--#endregion-->
    </Grid>
</Window>
