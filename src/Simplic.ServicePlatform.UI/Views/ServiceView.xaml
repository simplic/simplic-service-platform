<Window x:Class="Simplic.ServicePlatform.UI.ServiceView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:Simplic.ServicePlatform.UI"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        xmlns:simplic="http://schemas.simplic-systems.com/2016/xaml/presentation"
        mc:Ignorable="d" 
        d:DesignHeight="400" d:DesignWidth="800"
        MinHeight="400" MinWidth="400"
        Height="800" Width="1000"
        Title="{Binding ServiceName}">
    <Window.Resources>
        <Style x:Key="RadListBoxItemStyle" TargetType="telerik:RadListBoxItem" >
            <Setter Property="telerik:DragDropManager.AllowCapturedDrag" Value="True" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/> <!-- Soon: Ribbon bar -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <telerik:RadButton Width="70"
                           HorizontalAlignment="Left"
                           Content="Save"
                           Command="{Binding SaveCommand}"
                           CommandParameter="{Binding }"
                           Margin="10,0,0,0"/>
        <Border Grid.Row="1" Padding="10">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="4*"/>
                    <RowDefinition Height="4*"/>
                </Grid.RowDefinitions>

                <!--#region CardView for all Services-->
                <telerik:RadCardView x:Name="ServicesCardView"
                                     CardHeaderBinding="{Binding Model.ServiceName}"
                                     ItemsSource="{Binding Services}"
                                     AutoGenerateDataFieldDescriptors="False"  AllowDrop="True">
                    <telerik:RadCardView.CardReadOnlyTemplate>
                        <DataTemplate>
                            <!--#region Used modules of the service definition-->
                            <telerik:RadListBox x:Name="ServiceModulesListBox"
                                                ItemsSource="{Binding UsedModules, Mode=TwoWay}"
                                                ItemContainerStyle="{StaticResource RadListBoxItemStyle}"
                                                SelectedItem="{Binding SelectedServiceModule}"
                                                DisplayMemberPath="Name" MinHeight="50" AllowDrop="True"
                                                Drop="UsedModulesRadListBox_Drop" VerticalAlignment="Stretch">
                                <telerik:RadListBox.DragDropBehavior>
                                    <telerik:ListBoxDragDropBehavior  AllowReorder="True"  telerik:TouchManager.DragStartTrigger="TapHoldAndMove" telerik:DragDropManager.AllowDrag="True"/>
                                </telerik:RadListBox.DragDropBehavior>
                            </telerik:RadListBox>
                            <!--#endregion-->
                        </DataTemplate>
                    </telerik:RadCardView.CardReadOnlyTemplate>


                </telerik:RadCardView>
                <!--#endregion-->



                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="1.3*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>



                    <telerik:Label Content="{simplic:Localization Key=xaml_modules_in_use}"/>
                    <telerik:RadListBox x:Name="UsedModulesRadListBox"
                                        Grid.Row="1"
                                        ItemsSource="{Binding ObservableModules}"
                                        DisplayMemberPath="Name"
                                        SelectedItem="{Binding SelectedServiceModule, Mode=TwoWay}"
                                        AllowDrop="True"
                                        Drop="UsedModulesRadListBox_Drop"
                                        telerik:TouchManager.IsTouchHitTestVisible="True">
                        <telerik:RadListBox.ItemContainerStyle>
                            <Style TargetType="telerik:RadListBoxItem">
                                <Setter Property="telerik:DragDropManager.AllowDrag" Value="True" />
                                <Setter Property="telerik:DragDropManager.AllowCapturedDrag" Value="True" />
                                <Setter Property="telerik:TouchManager.DragStartTrigger" Value="TapHoldAndMove"/>
                            </Style>
                        </telerik:RadListBox.ItemContainerStyle>

                        <telerik:RadListBox.DragDropBehavior>
                            <telerik:ListBoxDragDropBehavior AllowReorder="True" telerik:DragDropManager.AllowDrag="True" />
                        </telerik:RadListBox.DragDropBehavior>

                        <telerik:RadListBox.DragVisualProvider>
                            <telerik:ScreenshotDragVisualProvider />
                        </telerik:RadListBox.DragVisualProvider>
                    </telerik:RadListBox>


                    <telerik:Label Content="{simplic:Localization Key=xaml_configuration}" Grid.Column="1"/>
                    <telerik:RadListBox x:Name="SelectedModuleConfigurationsRadListBox"
                                        Grid.Row="1" Grid.Column="1"
                                        ItemsSource="{Binding SelectedServiceModuleConfiguration}"
                                        AllowDrop="False"
                                        telerik:TouchManager.IsTouchHitTestVisible="True">


                        <telerik:RadListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <telerik:Label Content="{Binding Name}"/>
                                    <telerik:RadWatermarkTextBox Grid.Column="1" Text="{Binding Value}"/>
                                </Grid>
                            </DataTemplate>
                        </telerik:RadListBox.ItemTemplate>

                        <telerik:RadListBox.DragVisualProvider>
                            <telerik:ScreenshotDragVisualProvider />
                        </telerik:RadListBox.DragVisualProvider>
                    </telerik:RadListBox>
                </Grid>
            </Grid>
        </Border>

        <!--#region Available Modules-->
        <Grid Grid.Row="1" Grid.Column="1" >
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <telerik:Label Content="{simplic:Localization Key=xaml_available_modules}"/>
            <telerik:RadListBox Grid.Row="1"
                            x:Name="AvailableModulesRadListBox"
                            ItemsSource="{Binding AvailableModules}"
                            DisplayMemberPath="Name"
                            SelectedItem="{Binding SelectedAvailableModule, Mode=TwoWay}"
                            AllowDrop="True"
                            Drop="AvailableModulesRadListBox_Drop"
                            telerik:TouchManager.IsTouchHitTestVisible="True">
                <telerik:RadListBox.ItemContainerStyle>
                    <Style TargetType="telerik:RadListBoxItem">
                        <Setter Property="telerik:DragDropManager.AllowDrag" Value="True" />
                        <Setter Property="telerik:DragDropManager.AllowCapturedDrag" Value="True" />
                        <Setter Property="telerik:TouchManager.DragStartTrigger" Value="TapHoldAndMove"/>
                    </Style>
                </telerik:RadListBox.ItemContainerStyle>

                <telerik:RadListBox.DragDropBehavior>
                    <telerik:ListBoxDragDropBehavior AllowReorder="True" telerik:DragDropManager.AllowDrag="True" />
                </telerik:RadListBox.DragDropBehavior>

                <telerik:RadListBox.DragVisualProvider>
                    <telerik:ScreenshotDragVisualProvider />
                </telerik:RadListBox.DragVisualProvider>
            </telerik:RadListBox>
        </Grid>
        <!--#endregion-->
    </Grid>
</Window>
