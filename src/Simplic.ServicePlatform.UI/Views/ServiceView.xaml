<Window x:Class="Simplic.ServicePlatform.UI.ServiceView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:Simplic.ServicePlatform.UI"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        xmlns:simplic="http://schemas.simplic-systems.com/2016/xaml/presentation"
        mc:Ignorable="d" 
        d:DesignHeight="400" d:DesignWidth="400"
        MinHeight="400" MinWidth="400"
        Height="600" Width="600"
        Title="{Binding ServiceName}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <telerik:RadButton Width="70"
                           HorizontalAlignment="Left"
                           Content="Save"
                           Command="{Binding SaveCommand}"
                           Margin="10,0,0,0"/>
        <Border Grid.Row="1" Padding="10">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="4*"/>
                    <RowDefinition Height="4*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Vertical">
                    <Label Content="ID" Foreground="Gray"/>
                    <TextBlock Text="{Binding Id}" Height="25" Width="auto"/>
                </StackPanel>

                <StackPanel Grid.Row="1">
                    <Label Content="{simplic:Localization Key=grid_column_servicename}" Foreground="Gray"/>
                    <telerik:RadWatermarkTextBox WatermarkContent="some.service.name" Text="{Binding ServiceName}" Height="25" Width="auto"/>
                </StackPanel>

                <telerik:RadCardView Grid.Row="2" CardHeaderBinding="{Binding ServiceName}" ItemsSource="{Binding AvailableServices}"
                                     AutoGenerateDataFieldDescriptors="False">
                    <telerik:RadCardView.DataFieldDescriptors>
                        <telerik:CardDataFieldDescriptor Header="ID"
                                                         DataMemberBinding="{Binding Id}"/>
                        <telerik:CardDataFieldDescriptor Header="{simplic:Localization Key=grid_column_servicename}"
                                                         DataMemberBinding="{Binding ServiceName}"/>
                        <telerik:CardDataFieldDescriptor Header="{simplic:Localization Key=xaml_modules}">
                            <telerik:CardDataFieldDescriptor.EditorTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="60"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <telerik:Label Content="{simplic:Localization Key=xaml_modules_in_use}" Grid.Column="1"/>
                                        <telerik:RadListBox x:Name="UsedModulesRadListBox"
                                                            Grid.Row="1" Grid.Column="1"
                                                            ItemsSource="{Binding ObservableModules}"
                                                            DisplayMemberPath="Name"
                                                            SelectedItem="{Binding SelectedServiceModule, Mode=TwoWay}"
                                                            AllowDrop="True"
                                                            Drop="UsedModulesRadListBox_Drop"
                                                            telerik:TouchManager.IsTouchHitTestVisible="True"/>
                                    </Grid>
                                </DataTemplate>
                            </telerik:CardDataFieldDescriptor.EditorTemplate>
                        </telerik:CardDataFieldDescriptor>
                    </telerik:RadCardView.DataFieldDescriptors>
                </telerik:RadCardView>




                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="1.3*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <telerik:Label Content="{simplic:Localization Key=xaml_available_modules}"/>
                    <telerik:RadListBox x:Name="AvailableModulesRadListBox"
                                        Grid.Row="1"
                                        ItemsSource="{Binding AvailableModules}"
                                        DisplayMemberPath="Name"
                                        SelectedItem="{Binding SelectedAvailableModule, Mode=TwoWay}"
                                        AllowDrop="True"
                                        Drop="AvailableModulesRadListBox_Drop"
                                        telerik:TouchManager.IsTouchHitTestVisible="True">
                        <telerik:RadListBox.ItemContainerStyle>
                            <Style TargetType="telerik:RadListBoxItem">
                                <Setter Property="telerik:DragDropManager.AllowDrag" Value="True" />
                                <Setter Property="telerik:DragDropManager.AllowCapturedDrag" Value="True" />
                                <Setter Property="telerik:TouchManager.DragStartTrigger" Value="TapHoldAndMove"/>
                            </Style>
                        </telerik:RadListBox.ItemContainerStyle>

                        <telerik:RadListBox.DragDropBehavior>
                            <telerik:ListBoxDragDropBehavior AllowReorder="True" telerik:DragDropManager.AllowDrag="True" />
                        </telerik:RadListBox.DragDropBehavior>

                        <telerik:RadListBox.DragVisualProvider>
                            <telerik:ScreenshotDragVisualProvider />
                        </telerik:RadListBox.DragVisualProvider>
                    </telerik:RadListBox>


                    <telerik:Label Content="{simplic:Localization Key=xaml_modules_in_use}" Grid.Column="1"/>
                    <telerik:RadListBox x:Name="UsedModulesRadListBox"
                                        Grid.Row="1" Grid.Column="1"
                                        ItemsSource="{Binding ObservableModules}"
                                        DisplayMemberPath="Name"
                                        SelectedItem="{Binding SelectedServiceModule, Mode=TwoWay}"
                                        AllowDrop="True"
                                        Drop="UsedModulesRadListBox_Drop"
                                        telerik:TouchManager.IsTouchHitTestVisible="True">
                        <telerik:RadListBox.ItemContainerStyle>
                            <Style TargetType="telerik:RadListBoxItem">
                                <Setter Property="telerik:DragDropManager.AllowDrag" Value="True" />
                                <Setter Property="telerik:DragDropManager.AllowCapturedDrag" Value="True" />
                                <Setter Property="telerik:TouchManager.DragStartTrigger" Value="TapHoldAndMove"/>
                            </Style>
                        </telerik:RadListBox.ItemContainerStyle>

                        <telerik:RadListBox.DragDropBehavior>
                            <telerik:ListBoxDragDropBehavior AllowReorder="True" telerik:DragDropManager.AllowDrag="True" />
                        </telerik:RadListBox.DragDropBehavior>

                        <telerik:RadListBox.DragVisualProvider>
                            <telerik:ScreenshotDragVisualProvider />
                        </telerik:RadListBox.DragVisualProvider>
                    </telerik:RadListBox>


                    <telerik:Label Content="{simplic:Localization Key=xaml_configuration}" Grid.Column="2"/>
                    <telerik:RadListBox x:Name="SelectedModuleConfigurationsRadListBox"
                                        Grid.Row="1" Grid.Column="2"
                                        ItemsSource="{Binding SelectedServiceModuleConfiguration}"
                                        AllowDrop="False"
                                        telerik:TouchManager.IsTouchHitTestVisible="True">


                        <telerik:RadListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <telerik:Label Content="{Binding Name}"/>
                                    <telerik:RadWatermarkTextBox Grid.Column="1" Text="{Binding Value}"/>
                                </Grid>
                            </DataTemplate>
                        </telerik:RadListBox.ItemTemplate>

                        <telerik:RadListBox.DragVisualProvider>
                            <telerik:ScreenshotDragVisualProvider />
                        </telerik:RadListBox.DragVisualProvider>
                    </telerik:RadListBox>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
