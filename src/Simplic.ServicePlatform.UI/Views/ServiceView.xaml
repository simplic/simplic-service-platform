<Window x:Class="Simplic.ServicePlatform.UI.ServiceView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:Simplic.ServicePlatform.UI"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        mc:Ignorable="d" 
        d:DesignHeight="600" d:DesignWidth="400"
        Height="600" Width="500"
        MinHeight="300" MinWidth="400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border CornerRadius="2" Height="auto"
                BorderBrush="Gray"
                BorderThickness="1">
            <TextBlock Text="{Binding ServiceName}"
                       HorizontalAlignment="Center"
                       Foreground="DeepSkyBlue"
                       FontSize="30"/>
        </Border>

        <telerik:RadButton Grid.Row="1" Width="70"
                           HorizontalAlignment="Left"
                           Content="Save"
                           Command="{Binding SaveCommand}"
                           Margin="10,0,0,0"/>
        <Border Grid.Row="2" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height=".4*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Margin="10">
                        <StackPanel Orientation="Vertical">
                            <Label Content="ID" Foreground="Gray"/>
                            <TextBlock Text="{Binding Id}"
                                       Height="25" Width="auto"/>
                        </StackPanel>

                        <StackPanel>
                            <Label Content="Service Name" Foreground="Gray"/>
                            <telerik:RadWatermarkTextBox WatermarkContent="some.service.name"
                                                         Text="{Binding ServiceName}"
                                                         Height="25" Width="auto"/>
                        </StackPanel>
                    </StackPanel>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel>
                            <Label Content="Modules" FontSize="15" Foreground="Gray" Grid.ColumnSpan="2"/>
                            <!--<StackPanel Orientation="Horizontal" VerticalAlignment="Bottom"
                                    HorizontalAlignment="Right" Height="25">
                            <telerik:RadAutoCompleteBox Width="150" ItemsSource="{Binding AvailableModules}"
                                                        DisplayMemberPath="Name" SelectionMode="Single"/>
                            <telerik:RadButton Content="Add"/>
                        </StackPanel>-->
                            <TextBox Height="20" Text="{Binding SelectedAvailableModule.Name}"/>
                            <TextBox Height="20" Text="{Binding SelectedServiceModule.Name}"/>
                        </StackPanel>

                        <!--
                        <telerik:RadTreeListView Grid.Row="1" ItemsSource="{Binding Modules}"
                                                 AutoGenerateColumns="False">
                            
                            <telerik:RadTreeListView.Columns>
                                <telerik:GridViewDataColumn DataMemberBinding="{Binding Name}" Width="Auto"/>
                                <telerik:GridViewDataColumn DataMemberBinding="{Binding Value}" Header="ConfigValue"/>
                            </telerik:RadTreeListView.Columns>
                            
                            <telerik:RadTreeListView.ChildTableDefinitions>
                                <telerik:TreeListViewTableDefinition ItemsSource="{Binding Configuration}" />
                            </telerik:RadTreeListView.ChildTableDefinitions>
                            
                        </telerik:RadTreeListView>
                        -->

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <telerik:RadListBox x:Name="AvailableModulesRadListBox" Grid.Column="0"
                                                ItemsSource="{Binding AvailableModules}"
                                                DisplayMemberPath="Name"
                                                SelectedItem="{Binding SelectedAvailableModule, Mode=TwoWay}"
                                                AllowDrop="True"
                                                Drop="AvailableModulesRadListBox_Drop"
                                                telerik:TouchManager.IsTouchHitTestVisible="True">
                                <telerik:RadListBox.ItemContainerStyle>
                                    <Style TargetType="telerik:RadListBoxItem">
                                        <Setter Property="telerik:DragDropManager.AllowDrag" Value="True" />
                                        <Setter Property="telerik:DragDropManager.AllowCapturedDrag" Value="True" />
                                        <Setter Property="telerik:TouchManager.DragStartTrigger" Value="TapHoldAndMove"/>
                                    </Style>
                                </telerik:RadListBox.ItemContainerStyle>

                                <telerik:RadListBox.DragDropBehavior>
                                    <telerik:ListBoxDragDropBehavior AllowReorder="True" telerik:DragDropManager.AllowDrag="True" />
                                </telerik:RadListBox.DragDropBehavior>

                                <telerik:RadListBox.DragVisualProvider>
                                    <telerik:ScreenshotDragVisualProvider />
                                </telerik:RadListBox.DragVisualProvider>
                            </telerik:RadListBox>

                            <telerik:RadListBox x:Name="UsedModulesRadListBox" Grid.Column="1"
                                                ItemsSource="{Binding ModulesDummy}"
                                                DisplayMemberPath="Name"
                                                SelectedItem="{Binding SelectedServiceModule, Mode=TwoWay}"
                                                AllowDrop="True"
                                                Drop="UsedModulesRadListBox_Drop"
                                                telerik:TouchManager.IsTouchHitTestVisible="True">
                                <telerik:RadListBox.ItemContainerStyle>
                                    <Style TargetType="telerik:RadListBoxItem">
                                        <Setter Property="telerik:DragDropManager.AllowDrag" Value="True" />
                                        <Setter Property="telerik:DragDropManager.AllowCapturedDrag" Value="True" />
                                        <Setter Property="telerik:TouchManager.DragStartTrigger" Value="TapHoldAndMove"/>
                                    </Style>
                                </telerik:RadListBox.ItemContainerStyle>

                                <telerik:RadListBox.DragDropBehavior>
                                    <telerik:ListBoxDragDropBehavior AllowReorder="True" telerik:DragDropManager.AllowDrag="True" />
                                </telerik:RadListBox.DragDropBehavior>

                                <telerik:RadListBox.DragVisualProvider>
                                    <telerik:ScreenshotDragVisualProvider />
                                </telerik:RadListBox.DragVisualProvider>
                            </telerik:RadListBox>

                            <telerik:RadListBox x:Name="SelectedModuleConfigurationsRadListBox" Grid.Column="2"
                                                ItemsSource="{Binding SelectedServiceModuleConfiguration}"
                                                DisplayMemberPath="Name"
                                                AllowDrop="False"
                                                telerik:TouchManager.IsTouchHitTestVisible="True">
                                <telerik:RadListBox.ItemContainerStyle>
                                    <Style TargetType="telerik:RadListBoxItem">
                                        <Setter Property="telerik:DragDropManager.AllowDrag" Value="True" />
                                        <Setter Property="telerik:DragDropManager.AllowCapturedDrag" Value="True" />
                                        <Setter Property="telerik:TouchManager.DragStartTrigger" Value="TapHoldAndMove"/>
                                    </Style>
                                </telerik:RadListBox.ItemContainerStyle>

                                <telerik:RadListBox.DragDropBehavior>
                                    <telerik:ListBoxDragDropBehavior AllowReorder="True" telerik:DragDropManager.AllowDrag="True" />
                                </telerik:RadListBox.DragDropBehavior>

                                <telerik:RadListBox.DragVisualProvider>
                                    <telerik:ScreenshotDragVisualProvider />
                                </telerik:RadListBox.DragVisualProvider>
                            </telerik:RadListBox>
                        </Grid>

                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
