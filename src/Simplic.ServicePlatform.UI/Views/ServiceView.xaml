<Window x:Class="Simplic.ServicePlatform.UI.ServiceView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:Simplic.ServicePlatform.UI"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        mc:Ignorable="d" 
        d:DesignHeight="300" d:DesignWidth="400"
        MinHeight="300" MinWidth="400"
        Height="600" Width="600">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border CornerRadius="2" Height="auto"
                BorderBrush="Gray"
                BorderThickness="1">
            <TextBlock Text="{Binding ServiceName}"
                       HorizontalAlignment="Center"
                       Foreground="DeepSkyBlue"
                       FontSize="30"/>
        </Border>

        <telerik:RadButton Grid.Row="1" Width="70"
                           HorizontalAlignment="Left"
                           Content="Save"
                           Command="{Binding SaveCommand}"
                           Margin="10,0,0,0"/>
        <Border Grid.Row="2" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Vertical">
                        <Label Content="ID" Foreground="Gray"/>
                        <TextBlock Text="{Binding Id}"
                                       Height="25" Width="auto"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1">
                        <Label Content="Service Name" Foreground="Gray"/>
                        <telerik:RadWatermarkTextBox WatermarkContent="some.service.name"
                                                         Text="{Binding ServiceName}"
                                                         Height="25" Width="auto"/>
                    </StackPanel>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Label Content="Modules" FontSize="15" Foreground="Gray" Grid.ColumnSpan="2"/>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <telerik:Label Content="Available Modules"/>
                            <telerik:RadListBox x:Name="AvailableModulesRadListBox"
                                                Grid.Row="1"
                                                ItemsSource="{Binding AvailableModules}"
                                                DisplayMemberPath="Name"
                                                SelectedItem="{Binding SelectedAvailableModule, Mode=TwoWay}"
                                                AllowDrop="True"
                                                Drop="AvailableModulesRadListBox_Drop"
                                                telerik:TouchManager.IsTouchHitTestVisible="True">
                                <telerik:RadListBox.ItemContainerStyle>
                                    <Style TargetType="telerik:RadListBoxItem">
                                        <Setter Property="telerik:DragDropManager.AllowDrag" Value="True" />
                                        <Setter Property="telerik:DragDropManager.AllowCapturedDrag" Value="True" />
                                        <Setter Property="telerik:TouchManager.DragStartTrigger" Value="TapHoldAndMove"/>
                                    </Style>
                                </telerik:RadListBox.ItemContainerStyle>

                                <telerik:RadListBox.DragDropBehavior>
                                    <telerik:ListBoxDragDropBehavior AllowReorder="True" telerik:DragDropManager.AllowDrag="True" />
                                </telerik:RadListBox.DragDropBehavior>

                                <telerik:RadListBox.DragVisualProvider>
                                    <telerik:ScreenshotDragVisualProvider />
                                </telerik:RadListBox.DragVisualProvider>
                            </telerik:RadListBox>


                            <telerik:Label Content="Used Modules" Grid.Column="1"/>
                            <telerik:RadListBox x:Name="UsedModulesRadListBox"
                                                Grid.Row="1" Grid.Column="1"
                                                ItemsSource="{Binding ObservableModules}"
                                                DisplayMemberPath="Name"
                                                SelectedItem="{Binding SelectedServiceModule, Mode=TwoWay}"
                                                AllowDrop="True"
                                                Drop="UsedModulesRadListBox_Drop"
                                                telerik:TouchManager.IsTouchHitTestVisible="True">
                                <telerik:RadListBox.ItemContainerStyle>
                                    <Style TargetType="telerik:RadListBoxItem">
                                        <Setter Property="telerik:DragDropManager.AllowDrag" Value="True" />
                                        <Setter Property="telerik:DragDropManager.AllowCapturedDrag" Value="True" />
                                        <Setter Property="telerik:TouchManager.DragStartTrigger" Value="TapHoldAndMove"/>
                                    </Style>
                                </telerik:RadListBox.ItemContainerStyle>

                                <telerik:RadListBox.DragDropBehavior>
                                    <telerik:ListBoxDragDropBehavior AllowReorder="True" telerik:DragDropManager.AllowDrag="True" />
                                </telerik:RadListBox.DragDropBehavior>

                                <telerik:RadListBox.DragVisualProvider>
                                    <telerik:ScreenshotDragVisualProvider />
                                </telerik:RadListBox.DragVisualProvider>
                            </telerik:RadListBox>


                            <telerik:Label Content="Configuration" Grid.Column="2"/>
                            <telerik:RadListBox x:Name="SelectedModuleConfigurationsRadListBox"
                                                Grid.Row="1" Grid.Column="2"
                                                ItemsSource="{Binding SelectedServiceModuleConfiguration}"
                                                AllowDrop="False"
                                                telerik:TouchManager.IsTouchHitTestVisible="True">


                                <telerik:RadListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <telerik:Label Content="{Binding Name}"/>
                                            <telerik:RadWatermarkTextBox Grid.Column="1" Text="{Binding Value}"/>
                                        </Grid>
                                    </DataTemplate>
                                </telerik:RadListBox.ItemTemplate>

                                <telerik:RadListBox.DragVisualProvider>
                                    <telerik:ScreenshotDragVisualProvider />
                                </telerik:RadListBox.DragVisualProvider>
                            </telerik:RadListBox>
                        </Grid>

                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
